@page
@using API.Controllers;
@using CAPA_DATOS.Security;
@{
    string? identify = HttpContext.Session?.GetString("seassonKey") ?? "";  

    if (!SecurityController.Auth(identify))
    {
        Response.Redirect("./Security/Login");
        return;
    } else if (!SecurityController.IsAdmin(identify) &&  SecurityController.HavePermission(identify, Permissions.UPDATE_FAMILY_DATA))
    {
        Response.Redirect("./update/index");
        return;
    } 

}
@if (!SecurityController.IsAdmin(HttpContext.Session.GetString("seassonKey")))
{
    <div id="Main">
        <img class="mg-boletin" height="500px" src="/Media/img/inicio.jpeg" alt="Header Avatar">
    </div>

    <style>
        #Main {
            display: flex;
            justify-content: center;
            align-items: center;

        }

        img.mg-boletin {
            width: 1000px;
            height: 700px;

        }
    </style>
}
